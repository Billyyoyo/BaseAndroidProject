<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activities.ChangePasswordActivity">

    <EditText
        android:id="@+id/old_pwd_box"
        style="@style/login_edit_style_name"
        android:hint="请输入旧密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="5dp" />

    <View
        style="@style/primary_separetor_line_style" />

    <EditText
        android:id="@+id/new_pwd_box"
        style="@style/login_edit_style_pwd"
        android:hint="请输入新密码(6-16位)"
        android:inputType="textPassword"
        android:maxLength="16"
        android:paddingLeft="5dp" />

    <View
        style="@style/primary_separetor_line_style" />

    <EditText
        android:id="@+id/cnf_pwd_box"
        style="@style/login_edit_style_pwd"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:maxLength="16"
        android:paddingLeft="5dp" />

    <View
        style="@style/primary_separetor_line_style" />

    <Button
        android:id="@+id/submit_btn"
        style="@style/login_theme_round_button"
        android:layout_marginTop="30dp"
        android:text="修改" />
</LinearLayout>