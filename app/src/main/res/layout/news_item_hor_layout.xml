<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/title_view"
        android:textColor="@color/fore"
        android:textSize="16sp"
        android:lineHeight="30dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignTop="@+id/pic_view"
        android:layout_toLeftOf="@+id/pic_view"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/pic_view"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_width="130dp"
        android:layout_height="80dp"
        app:riv_corner_radius="2dp"/>

    <TextView
        android:id="@+id/src_view"
        android:textColor="@color/foreLight"
        android:textSize="10sp"
        android:lines="1"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/pic_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/time_view"
        android:textColor="@color/foreLight"
        android:textSize="10sp"
        android:lines="1"
        android:layout_alignTop="@+id/src_view"
        android:layout_toRightOf="@+id/src_view"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/foreLight"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/time_view"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
</RelativeLayout>